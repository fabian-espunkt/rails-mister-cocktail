

<div class="container">
  <h1><%= @cocktail.name %> - Cocktail Recipe</h1>
  <table class="table table-striped table-borderless table-hover">
      <thead class="thead-dark">
          <tr>
              <th scope="col"><strong>Amount</strong></th>
              <th scope="col"><strong>Ingredient</strong></th>
              <th scope="col"><strong>Options</strong></th>
          </tr>
      </thead>
      <tbody>
           <% @cocktail.doses.each do |dose| %>
          <tr>
              <td><%= dose.description %></td>
              <td><%= dose.ingredient.name %></td>
              <td><%= link_to "❌ Delete", dose_path(dose), method: :delete %></td>
          <% end %>
          </tr>
      </tbody>
  </table>

  <%= cl_image_tag("cuba_libre_cu3k5w", width: 400, height: 300, crop: :fill) %>

  <p style="margin-top: 20px"><%= link_to "➕ Create new dose", new_cocktail_dose_path(@cocktail) %> | <%= link_to "⬅ Go Back to overview", cocktails_path(@cocktail) %></p>

</div>


